<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="BaseAppTheme.NoActionBar" parent="BaseAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:theme">@style/BaseAppTheme</item>
    </style>

    <style name="Location.Text" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="List.Header" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">21.4sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="List.Item" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17.4sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="List.Item.normal" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/medium_dark_grey</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="List.Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Details.Text" parent="Location.Text">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>

